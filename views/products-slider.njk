{% block content %}
  <div class="widget">
    <div class="visited">
      <div class="title">
        <h1>Voce visitou:</h1>
      </div>
      <div class="box-product">
        <img src="{{ product.item.imageName }}" alt="">
        <h1>{{ product.item.name | substring(80) }}</h1>
        <div class="prices">
          <div class="price-old">
            <span>De:</span>
            <span class="value">
              {{ product.item.oldPrice }}
            </span>
          </div>
          <div class="price">
            <span>Por:</span>
            <span class="value">
              {{ product.item.price }}
            </span>
          </div>
          <span class="paymentConditions">
            {{ product.item.productInfo.installmentStart }}
            <strong>{{ product.item.productInfo.installmentMiddle }}</strong>
            {{ product.item.productInfo.installmentEnd }}
          </span>
        </div>
        <button type="button" class="btn btn-boxProduct" style="display:none">
          <span>adicionar ao carrinho</span>
          <svg class="icon-btn" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
            <path d="M0 0h24v24H0zm18.31 6l-2.76 5z" fill="none" />
            <path d="M11 9h2V6h3V4h-3V1h-2v3H8v2h3v3zm-4 9c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zm10 0c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2zm-9.83-3.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.86-7.01L19.42 4h-.01l-1.1 2-2.76 5H8.53l-.13-.27L6.16 6l-.95-2-.94-2H1v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.13 0-.25-.11-.25-.25z" /></svg>
        </button>
      </div>
    </div>
    <div class="recommendations">
      <div class="title">
        <h1>e talvez se interesse por:</h1>
      </div>
      <ul class="responsive">
        {% for p in product.recommendation %}
        <li>
          <div class="box-product">
            <img class="img-product" src="{{ p.imageName }}" alt="">
            <h1>{{ p.name | substring(75) }}</h1>
            <div class="prices">
              <div class="price-old">
                <span>De:</span>
                <span class="value">
                  {{ p.oldPrice }}
                </span>
              </div>
              <div class="price">
                <span>Por:</span>
                <span class="value">
                  {{ p.price }}
                </span>
              </div>
              <span class="paymentConditions">
                {{ p.productInfo.installmentStart }}
                <strong>{{ p.productInfo.installmentMiddle }}</strong>
                {{ p.productInfo.installmentEnd }}
              </span>
            </div>
            <button type="button" class="btn btn-boxProduct" style="display:none">
              <span>adicionar ao carrinho</span>
              <svg class="icon-btn" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <path d="M0 0h24v24H0zm18.31 6l-2.76 5z" fill="none" />
                <path d="M11 9h2V6h3V4h-3V1h-2v3H8v2h3v3zm-4 9c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zm10 0c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2zm-9.83-3.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.86-7.01L19.42 4h-.01l-1.1 2-2.76 5H8.53l-.13-.27L6.16 6l-.95-2-.94-2H1v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.13 0-.25-.11-.25-.25z" /></svg>
            </button>
          </div>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endblock %}